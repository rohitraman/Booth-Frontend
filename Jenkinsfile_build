pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                script {
                    bat 'mvn clean package'
                }
            }
        }
        
        stage('Build Docker image') {
            steps {
                script {
                    bat 'docker build -t booth-frontend .'
                }
            }
        }

        stage ('Trigger Downstream Job') {
            steps {
                build(job: 'Booth Service Image Create', parameters: [])
            }
        }
    }

}